    <methodList>
      <method name="addNote" type="uimthd">
        <script><![CDATA[
          if(!this.newNote || this.newNote.trim() == "")
              return;
          if(this.model.notes)
              this.model.notes += new Date() + " - " + UserProfile.userId() + ":\n";
          else
              this.model.notes = new Date() + " - " + UserProfile.userId() + ":\n";

          this.model.notes += this.newNote + "\n";
          this.model.notes += "------------------------------------------" + "\n";

          //reset the new Note
          this.newNote = "";
        ]]></script>
      </method>
