  <methodList>
    <method name="cwOnFinderSel" type="action">
      <system>true</system>
      <script><![CDATA[
        var relationArr = new Array();
        var result = new DataObjectList();
        if (this.searchDocument.itemCode == null)
              return result;

        // Check for circular dependency at the parents before go create the chart
        var circularchecksql = 'select itemcode, itemrelationtarget from cwpc_itemrelation_v where CONNECT_BY_ISCYCLE=1 start with itemrelationtarget=? connect by nocycle prior itemcode=itemrelationtarget';
        var searchArray = new Array();
        searchArray[0] = this.searchDocument.itemCode;
        var cres = Global.runSQLQuery("CATALOG", "cwt_pc:cwt_restriction", 1, searchArray, circularchecksql);
        if (cres.size > 0) {
        //    return result;
        }

        var item = Document.readDoc("cwt_pc:cwt_itemNew", this.searchDocument.itemCode);
        //var item = Document.readDoc("cwt_pc:cwt_itemNew", "htc_droid");

        //get all relation documents (including inherited relations)
        var level = 0;
        relationArr = this.getRelations(item.itemCode, relationArr, item.itemCode, level, this.searchDocument.itemCode);

        var yFiller = 100/(relationArr.length+2);      //level of relations + original item + 1 buffer space
        var yCoord = 0;

        //rearrange data
        var newRelations = this.rearrangeData(relationArr);

        //add relations to result
        for (var i=newRelations.length-1; i>=0; i--) {
              yCoord = yCoord + yFiller;
              result = this.createDocuments(newRelations[i], yCoord, result);
        }

        //add original item to result
        yCoord = yCoord + yFiller;
        result = this.createItemDocument(item, yCoord, result);

        return result;
      ]]></script>
    </method>
    <method name="getRelations" type="uimthd">
      <parameterList>
        <parameter name="itemCode" type="rifp">
          <type>dtype_cwt_pcdd.catalogCode</type>
        </parameter>
        <parameter name="result" type="rifp">
          <type>nmeta_com.conceptwave.system.Object</type>
        </parameter>
        <parameter name="parent" type="rifp">
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
        <parameter name="level" type="rifp">
          <type>dtype_com.conceptwave.system.Integer</type>
        </parameter>
        <parameter name="nodePath" type="rifp">
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
        <parameter name="parentRelationType" type="rifp">
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        var finder = new Finder("cwt_pc:cwt_itemRelationNodeFinder");
        finder.searchDocument.itemCode = itemCode;
        var fr = finder.search();

        var currentResult = new Array();
        for (var i=0; i<fr.length; i++) {
              var itemRel = fr[i];
              //filter the item relations to remove versions
              var flag = true;
              for (var z=0; z<currentResult.length; z++) {
                    if (itemRel.itemCode == currentResult[z].itemCode && itemRel.itemRelationCode == currentResult[z].itemRelationCode) {
                          flag = false;
                          break;
                    }
              }
              if (flag) {
                    var f = new Finder("cwt_pc:cwt_itemRelationFinder");
                    f.searchDocument.itemCode = itemRel.itemCode;
                    f.searchDocument.itemRelationCode = itemRel.itemRelationCode;
                    f.search();
                    var defaultVersion = cwt_pc.getDefaultVersionWithoutStatus(f.list);
                    defaultVersion.parentNode = parent;
                    currentResult.push(defaultVersion);
              }
        }
        if (fr.length > 0) {
              currentResult.push(level++);
            result.push(currentResult);

        }

        for (var i=0; i<currentResult.length-1; i++) {
              var code = currentResult[i].itemRelationTarget;
              var relationCode = currentResult[i].itemRelationCode;

              var spaceNodePath = " " + nodePath + " ";
              var nextPath = nodePath + " (" + relationCode + ") " + code;

              // *TL+if : loop detection
              if (spaceNodePath.indexOf(" "+code+" ")>=0) {
                  continue;  // *TL + 11-Sep-2013, for relationships like Service requires Services
                  var rootNode = nodePath.substring(0, nextPath.indexOf(" "));
                  Global.throwException("DW9287", [rootNode, nextPath, code]);
              }

              if(currentResult[i].type == 'contains' || currentResult[i].type == 'List' || (parentRelationType!=null && (parentRelationType == 'List' || parentRelationType == 'contains')))
                  result = this.getRelations(code, result, parent + "_" + currentResult[i].itemRelationCode, level, nextPath, currentResult[i].type);
        }

        return result;
      ]]></script>
    </method>
    <method name="createDocuments" type="uimthd">
      <parameterList>
        <parameter name="relationDocs" type="rifp">
          <type>nmeta_com.conceptwave.system.Object</type>
        </parameter>
        <parameter name="yCoord" type="rifp">
          <type>dtype_com.conceptwave.system.Integer</type>
        </parameter>
        <parameter name="result" type="rifp">
          <type>nmeta_com.conceptwave.system.Object</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        var relationCount = relationDocs.length;
        var buffer = 0;
        if (relationCount%2 != 0)      //if there are odd number of relations
              buffer = 1;
        var xFiller = 100/(relationCount+buffer+1);
        var xCoord = 0;

        for (var i=0; i<relationDocs.length; i++) {
                xCoord = xCoord + xFiller;
              var itemRel = relationDocs[i];
              var doc = new Document("cwt_pc:itemNodalChart");
              doc.id = itemRel.parentNode + "_" + itemRel.itemRelationCode;
              doc.label = itemRel.name;
              doc.connectTo = itemRel.parentNode;
              doc.connectorLabel = itemRel.type.refData.visualKey;
              //doc.imageUrl = "/images/chart/product_green.png";
              doc.imageUrl = cwt_pc.getItemTreeNodeIcon(itemRel.itemRelationTarget.refData.itemType, 'L');
              doc.trendName = itemRel.type.refData.relationTypeCode;
              doc.height = 50;
              //doc.width = (itemRel.name.length > 13 ? (itemRel.name.length * 8) : 100); //assuming 1 character = 8 pixel
              //doc.width = 15 * 8; //characters * pixel
              doc.xCoordinate = xCoord;
              doc.yCoordinate = yCoord;
              result.addLast(doc);
        }

        return result;
      ]]></script>
    </method>
    <method name="createItemDocument" type="uimthd">
      <parameterList>
        <parameter name="item" type="rifp">
          <type>doc_cwt_pc.cwt_itemNew</type>
        </parameter>
        <parameter name="yCoord" type="rifp">
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
        <parameter name="result" type="rifp">
          <type>nmeta_com.conceptwave.system.Object</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        var xCoord = 50;
        var doc = new Document("cwt_pc:itemNodalChart");
        doc.id = item.itemCode;
        doc.label = item.name;
        //doc.imageUrl = "/images/chart/product_green.png";
        doc.imageUrl = cwt_pc.getItemTreeNodeIcon(item.itemType, 'L');
        doc.height = 50;
        //doc.width = (item.name.length > 13 ? (item.name.length * 8) : 100); //assuming 1 character = 8 pixel
        //doc.width = 15 * 8; //characters * pixel
        doc.xCoordinate = xCoord;
        doc.yCoordinate = yCoord;
        result.addLast(doc);

        return result;
      ]]></script>
    </method>
    <method name="rearrangeData" type="uimthd">
      <parameterList>
        <parameter name="relationsArr" type="rifp">
          <type>nmeta_com.conceptwave.system.Object</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        //relationsArr is a 2x2 array. The last element in the second array is level.
        var returnArr = new Array();
        var oldLevel = -1;

        for (var i=0; i<relationsArr.length; i++) {
              var arr = relationsArr[i];
              var level = arr[arr.length-1];
              if (level > oldLevel) {
                    var currentArr = new Array();
                    currentArr = currentArr.concat(arr.slice(0, arr.length-1));

                    for (var j=i+1; j<relationsArr.length; j++) {
                          var arr2 = relationsArr[j];
                          if (arr2[arr2.length-1] == level) {
                                currentArr = currentArr.concat(arr2.slice(0, arr2.length-1));
                          }
                    }

                    oldLevel = level;
                    returnArr.push(currentArr);
              }
        }

        return returnArr;

        //slice(0, length-1)
        //concat
      ]]></script>
    </method>
