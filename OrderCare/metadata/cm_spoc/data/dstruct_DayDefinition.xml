    <method name="setLabelStyle" type="action">
      <valueType>dtype_com.conceptwave.system.String</valueType>
      <script><![CDATA[
        var style;
        var defaultTypeOfDayArr = cm_spoc.getTypeOfDayWeekDayDDefault();

        if(defaultTypeOfDayArr.length > 0)
        {
            if( (!this.TypeOfDay) || (defaultTypeOfDayArr[this.dayOfTheWeek-1].itemRelationTarget != this.TypeOfDay) )
            {
                style = 'defaultStyle';
            }

            if( (this.TypeOfDay) && (defaultTypeOfDayArr[this.dayOfTheWeek-1].itemRelationTarget == this.TypeOfDay) )
            {
                style =  'blueStyle';
            }
        }
        else
        style = 'defaultStyle';

        return style;
      ]]></script>
