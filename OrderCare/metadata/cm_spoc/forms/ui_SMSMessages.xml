<?xml version="1.0" encoding="UTF-8" ?>
<userInterface name="cm_spoc.forms.SMSMessages">
  <group>Promotion</group>
  <label>SMSMessages</label>
  <metaVersion>4</metaVersion>
  <variableList>
    <variable name="model" type="leaf">
      <valueType>dstruct_cm_spoc.data.SMSConsumptionCriterion</valueType>
    </variable>
  </variableList>
  <vformList>
    <vform name="Forms" type="frmui">
      <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms</extends>
      <overlayList>
        <overlay name="Default" type="exov">
          <base>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</base>
          <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</extends>
          <label>Default</label>
          <overrideList>
            <override name="VerticalLayout" type="elvlt">
              <elementList>
                <element name="SectionStack" type="elsectnstck">
                  <width>750px</width>
                  <elementList>
                    <element name="Section" type="elsect">
                      <elementList>
                        <element name="SectionHeader" type="elsecth">
                          <label>Calls</label>
                        </element>
                        <element name="GridLayout" type="elgrd">
                          <numOfCols>2</numOfCols>
                          <width>200px</width>
                          <elementList>
                            <element name="UseTrafficUnitType" type="elslct">
                              <labeAlign>left</labeAlign>
                              <label>The subscriber must have used call traffic at lest in the last:</label>
                              <labelOrientation>left</labelOrientation>
                              <variable type="varPath">
                                <variablePathList>
                                  <variablePath>ui_cm_spoc.forms.SMSMessages/leaf_model</variablePath>
                                  <variablePath>dstruct_cm_spoc.data.SMSConsumptionCriterion/dstruct_UseTrafficUnitType</variablePath>
                                </variablePathList>
                              </variable>
                              <width>150px</width>
                            </element>
                            <element name="SMSConsumptionCriterionType" type="elslct">
                              <labeAlign>left</labeAlign>
                              <label>SMS Consumption Criterion Type</label>
                              <labelOrientation>left</labelOrientation>
                              <variable type="varPath">
                                <variablePathList>
                                  <variablePath>ui_cm_spoc.forms.SMSMessages/leaf_model</variablePath>
                                  <variablePath>dstruct_cm_spoc.data.SMSConsumptionCriterion/dstruct_SMSConsumptionCriterionType</variablePath>
                                </variablePathList>
                              </variable>
                              <width>150px</width>
                            </element>
                            <element name="Amount" type="elfld">
                              <labeAlign>left</labeAlign>
                              <label>Amount:</label>
                              <labelOrientation>left</labelOrientation>
                              <variable type="varPath">
                                <variablePathList>
                                  <variablePath>ui_cm_spoc.forms.SMSMessages/leaf_model</variablePath>
                                  <variablePath>dstruct_cm_spoc.data.SMSConsumptionCriterion/dstruct_Amount</variablePath>
                                </variablePathList>
                              </variable>
                              <width>150px</width>
                            </element>
                          </elementList>
                        </element>
                        <element name="GridLayout1" type="elgrd">
                          <numOfCols>4</numOfCols>
                          <width>200px</width>
                          <elementList>
                            <element name="Wallet" type="elfld">
                              <editable type="varPath">
                                <variablePathList>
                                  <variablePath>dtype_com.conceptwave.system.Boolean/leaf_FALSE</variablePath>
                                </variablePathList>
                              </editable>
                              <labeAlign>left</labeAlign>
                              <label>Wallet</label>
                              <labelOrientation>left</labelOrientation>
                              <variable type="varPath">
                                <variablePathList>
                                  <variablePath>ui_cm_spoc.forms.SMSMessages/leaf_model</variablePath>
                                  <variablePath>dstruct_cm_spoc.data.SMSConsumptionCriterion/dstruct_Wallet</variablePath>
                                </variablePathList>
                              </variable>
                              <width>150px</width>
                            </element>
                            <element name="Button" type="elbtn">
                              <clickMethod type="varPath">
                                <variablePathList>
                                  <variablePath>ui_cm_spoc.forms.SMSMessages/usrActionMethod_FinderWalletReferenceDialog</variablePath>
                                </variablePathList>
                              </clickMethod>
                              <icon>/cwf/finder.gif</icon>
                              <width>25px</width>
                            </element>
                          </elementList>
                        </element>
                        <element name="GridLayout2" type="elgrd">
                          <numOfCols>2</numOfCols>
                          <width>200px</width>
                          <elementList>
                            <element name="NumberOfSMSMessages" type="elfld">
                              <labeAlign>left</labeAlign>
                              <label>Number of SMS messages:</label>
                              <labelOrientation>left</labelOrientation>
                              <variable type="varPath">
                                <variablePathList>
                                  <variablePath>ui_cm_spoc.forms.SMSMessages/leaf_model</variablePath>
                                  <variablePath>dstruct_cm_spoc.data.SMSConsumptionCriterion/dstruct_NumberOfSMSMessages</variablePath>
                                </variablePathList>
                              </variable>
                              <width>150px</width>
                            </element>
                            <element name="FilterIdentifier" type="elfld">
                              <labeAlign>left</labeAlign>
                              <label>Filter Identifier</label>
                              <labelOrientation>left</labelOrientation>
                              <variable type="varPath">
                                <variablePathList>
                                  <variablePath>ui_cm_spoc.forms.SMSMessages/leaf_model</variablePath>
                                  <variablePath>dstruct_cm_spoc.data.SMSConsumptionCriterion/dstruct_FilterIdentifier</variablePath>
                                </variablePathList>
                              </variable>
                              <width>150px</width>
                            </element>
                          </elementList>
                        </element>
                        <element name="VerticalLayout2" type="elvlt">
                          <elementList>
                            <element name="Separator" type="elsep">
                              <width>750px</width>
                            </element>
                            <element name="VerticalLayout1" type="elhlt">
                              <alignment>right,center</alignment>
                              <elementList>
                                <element name="OK" type="elbtn">
                                  <cellAlignment>right,center</cellAlignment>
                                  <clickMethod type="varPath">
                                    <variablePathList>
                                      <variablePath>ui_cm_spoc.forms.SMSMessages/uimthd_onClickOk</variablePath>
                                    </variablePathList>
                                  </clickMethod>
                                  <label>Accept</label>
                                </element>
                                <element name="Cancel" type="elbtn">
                                  <canSort>false</canSort>
                                  <cellAlignment>center,center</cellAlignment>
                                  <clickMethod type="varPath">
                                    <variablePathList>
                                      <variablePath>ui_cm_spoc.forms.SMSMessages/uimthd_onClickCancel</variablePath>
                                    </variablePathList>
                                  </clickMethod>
                                  <label>Cancel</label>
                                </element>
                              </elementList>
                            </element>
                          </elementList>
                        </element>
                      </elementList>
                    </element>
                  </elementList>
                </element>
              </elementList>
            </override>
          </overrideList>
        </overlay>
      </overlayList>
    </vform>
  </vformList>
  <methodList>
    <method name="referenceCallback" type="uimthd">
      <parameterList>
        <parameter name="itemCode" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
        <parameter name="baseItemCode" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
      </parameterList>
      <script>this.model.Wallet = itemCode;</script>
    </method>
    <method name="FinderWalletReferenceDialog" type="usrActionMethod">
      <dialogObject>ui_com.conceptwave.system.Dialog</dialogObject>
      <showInPopup>true</showInPopup>
      <script><![CDATA[
        var newDetail = new cm_spoc.FinderSelectReference(null,this);
        newDetail.setBaseItemCode("base_Wallet");
        newDetail.parentUI = this;
        return newDetail;
      ]]></script>
    </method>
    <method name="onClickCancel" type="uimthd">
      <script>this.parent.cwDialogClose();</script>
    </method>
    <method name="onClickOk" type="uimthd">
      <script><![CDATA[
        this.parent.owner.model.PSSMSConsumpCriterionArrDS.List[this.parent.owner.model.PSSMSConsumpCriterionArrDS.List.length] =  this.model;
        this.parent.owner.model.PSSMSConsumpCriterionArrDS.ListDS[this.parent.owner.model.PSSMSConsumpCriterionArrDS.ListDS.length] =  this.model;

        if(this.parent.owner.model.PSSMSConsumpCriterionArrDS.List.length>0){

            if(this.parent.owner.ListConsumption==null)
                this.parent.owner.ListConsumption = new DataObjectList();
            //Check if the label was added
            var exist = false;
            for(var j=0; j< this.parent.owner.ListConsumption.length; j++){
                var descriptionI = this.parent.owner.ListConsumption[j].description.split(' ');
                if(descriptionI.length>2){
                    var descString = descriptionI[0]+" "+descriptionI[1];
                    if( descString == "SMS consumed" && this.parent.owner.ListConsumption[j].itemCode == this.model.specificationCode){
                         exist=true;
                         if( this.parent.owner.ListConsumption[j].description != this.model.SMSConsumptionCriterionType)
                             this.parent.owner.ListConsumption[j].description = this.model.SMSConsumptionCriterionType;
                    }
                }
            }
            if(!exist){
                var item = new cm_spoc.FinderSelectReferenceDS();
                item.description = "SMS consumed "+this.model.SMSConsumptionCriterionType;
                item.itemCode = this.model.specificationCode;
                this.parent.owner.ListConsumption.addLast(item);
                this.parent.owner.ListConsumption.updateList;
            }
        }else{
             if(this.parent.owner.ListConsumption==null)
                this.parent.owner.ListConsumption = new DataObjectList();
            for(var k=0; k< this.parent.owner.ListConsumption.length; k++){
                    var descriptionI = this.parent.owner.ListConsumption[k].description.split(' ');
                    if(descriptionI.length>2){
                        var descString = descriptionI[0]+" "+descriptionI[1];
                        if( this.parent.owner.ListConsumption[k].description == "SMS consumed" &&  this.parent.owner.ListConsumption[k].itemCode)
                             this.parent.owner.ListConsumption.delete(k);
                    }
            }
            this.parent.owner.ListConsumption.updateList;
        }
        cm_spoc.rule_SMSCCFilterIdentifierCondRule(this);

        this.parent.cwDialogClose();
      ]]></script>
    </method>
  </methodList>
</userInterface>