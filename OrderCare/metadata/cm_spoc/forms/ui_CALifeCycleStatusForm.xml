    <method name="CALCSOutstandingExecutionsAreRecovereVisRule" type="permMethod">
      <script><![CDATA[
        if(!this.model.readonly)
        {
            if( this.model.InactivityStatus && (this.model.PeriodicRetries || this.model.AfterOperationRetries ))
            {
                return true;

            }
            else
            {
                this.model.OutstandingExecutionsAreRecovere= false;
                return false;
            }
        }
