<?xml version="1.0" encoding="UTF-8" ?>
<userInterface name="cm_spoc.forms.ChargingModeForm">
  <group>Common.ChargingMode</group>
  <label>ChargingModeForm</label>
  <metaVersion>4</metaVersion>
  <variableList>
    <variable name="selectedTariffPlanGroup" type="leaf">
      <valueType>dtype_com.conceptwave.system.Integer</valueType>
    </variable>
    <variable name="CMTariffPlanGroupUI" type="leaf">
      <valueType>ui_cm_spoc.forms.CMTariffPlanGroupUI</valueType>
    </variable>
    <variable name="CMWalletApplicationUI" type="leaf">
      <valueType>ui_cm_spoc.forms.CMWalletApplicationUI</valueType>
    </variable>
    <variable name="model" type="leaf">
      <valueType>dstruct_cm_spoc.data.ChargingMode</valueType>
    </variable>
  </variableList>
  <vformList>
    <vform name="Forms" type="frmui">
      <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms</extends>
      <overlayList>
        <overlay name="Default" type="exov">
          <base>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</base>
          <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</extends>
          <label>Default</label>
          <overrideList>
            <override name="VerticalLayout" type="elvlt">
              <width>700px</width>
              <elementList>
                <element name="SectionStack" type="elsectnstck">
                  <width>100%</width>
                  <elementList>
                    <element name="Section" type="elsect">
                      <canCollapse>false</canCollapse>
                      <cellAlignment>center,center</cellAlignment>
                      <elementList>
                        <element name="VerticalLayout1" type="elvlt">
                          <width>95%</width>
                          <elementList>
                            <element name="VerticalLayout2" type="elvlt">
                              <alignment>right,center</alignment>
                              <elementList>
                                <element name="LayoutSpacer2" type="ellsp">
                                  <height>20px</height>
                                </element>
                                <element name="ChargingModality" type="elfld">
                                  <cellAlignment>left,center</cellAlignment>
                                  <editable type="varPath">
                                    <variablePathList>
                                      <variablePath>ui_cm_spoc.forms.ChargingModeForm/permMethod_enabledChargingModality</variablePath>
                                    </variablePathList>
                                  </editable>
                                  <labeAlign>left</labeAlign>
                                  <label>Charging Modality</label>
                                  <labelOrientation>left</labelOrientation>
                                  <textAlign>left</textAlign>
                                  <variable type="varPath">
                                    <variablePathList>
                                      <variablePath>ui_cm_spoc.forms.ChargingModeForm/leaf_model</variablePath>
                                      <variablePath>dstruct_cm_spoc.data.ChargingMode/dstruct_ChargingModality</variablePath>
                                    </variablePathList>
                                  </variable>
                                </element>
                                <element name="Description" type="elfld">
                                  <cellAlignment>left,center</cellAlignment>
                                  <labeAlign>left</labeAlign>
                                  <labelOrientation>left</labelOrientation>
                                  <textAlign>left</textAlign>
                                  <variable type="varPath">
                                    <variablePathList>
                                      <variablePath>ui_cm_spoc.forms.ChargingModeForm/leaf_model</variablePath>
                                      <variablePath>dstruct_cm_spoc.data.ChargingMode/dstruct_Description</variablePath>
                                    </variablePathList>
                                  </variable>
                                </element>
                              </elementList>
                            </element>
                            <element name="LayoutSpacer" type="ellsp">
                              <height>20px</height>
                            </element>
                            <element name="HorizontalLayout" type="elhlt">
                              <elementList>
                                <element name="LayoutSpacer3" type="ellsp">
                                  <width>20px</width>
                                </element>
                                <element name="TariffPlanGroupFormFrame" type="elovf">
                                  <fillSpace>false</fillSpace>
                                  <formReference type="varPath">
                                    <variablePathList>
                                      <variablePath>ui_cm_spoc.forms.ChargingModeForm/leaf_CMTariffPlanGroupUI</variablePath>
                                      <variablePath>ui_cm_spoc.forms.CMTariffPlanGroupUI/frmui_Forms</variablePath>
                                      <variablePath>ui_cm_spoc.forms.CMTariffPlanGroupUI/frmui_Forms/exov_Default</variablePath>
                                    </variablePathList>
                                  </formReference>
                                  <variable type="varPath">
                                    <variablePathList>
                                      <variablePath>ui_cm_spoc.forms.ChargingModeForm/leaf_CMTariffPlanGroupUI</variablePath>
                                    </variablePathList>
                                  </variable>
                                </element>
                                <element name="LayoutSpacer1" type="ellsp">
                                  <width>20px</width>
                                </element>
                                <element name="WalletApplicationFormFrame" type="elovf">
                                  <formReference type="varPath">
                                    <variablePathList>
                                      <variablePath>ui_cm_spoc.forms.ChargingModeForm/leaf_CMWalletApplicationUI</variablePath>
                                      <variablePath>ui_cm_spoc.forms.CMWalletApplicationUI/frmui_Forms</variablePath>
                                      <variablePath>ui_cm_spoc.forms.CMWalletApplicationUI/frmui_Forms/exov_Default</variablePath>
                                    </variablePathList>
                                  </formReference>
                                  <variable type="varPath">
                                    <variablePathList>
                                      <variablePath>ui_cm_spoc.forms.ChargingModeForm/leaf_CMWalletApplicationUI</variablePath>
                                    </variablePathList>
                                  </variable>
                                  <width>450px</width>
                                </element>
                              </elementList>
                            </element>
                            <element name="LayoutSpacer4" type="ellsp">
                              <height>20px</height>
                            </element>
                          </elementList>
                        </element>
                        <element name="SectionHeader" type="elsecth">
                          <label>Charging Mode</label>
                        </element>
                      </elementList>
                    </element>
                  </elementList>
                </element>
              </elementList>
            </override>
          </overrideList>
        </overlay>
      </overlayList>
    </vform>
  </vformList>
  <methodList>
    <method name="cwLeafInitAction$model" type="laction">
      <path>ui_cm_spoc.forms.ChargingModeForm/leaf_model</path>
      <type>initializer</type>
      <script><![CDATA[
        var m = cm_spoc.initChargingMode(this.model);
        cm_spoc.initChargingModeUI(this);
        return m;
      ]]></script>
    </method>
    <method name="loadWalletApplications" type="uimthd">
      <parameterList>
        <parameter name="index" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.Integer</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        // Load WalletApplication after adding a new TariffPlanGroup
        this.selectedTariffPlanGroup = index;
        var chargingModeByPlanGroup = this.CMTariffPlanGroupUI.CMTariffPlanGroupIterator[index].model;
        var listDS = chargingModeByPlanGroup.CMBPGWalletApplicationArrDS.ListDS;
        this.CMWalletApplicationUI.CMWalletApplicationIterator = new Array();
        var itemFinder = new Finder("cm_spoc.catalogItemFilteredFinder");
        itemFinder.searchDocument.baseItemCode = "base_Wallet";
        var result = itemFinder.search();
        for(var i=0;i<result.length;i++){
            this.CMWalletApplicationUI.addWalletApplication();
            var wa = listDS[listDS.length-1];
            wa.Wallet = result[i].itemCode;
        }
      ]]></script>
    </method>
    <method name="setReadOnly" type="uimthd">
      <script><![CDATA[
        for(var i=0;i<this.CMTariffPlanGroupUI.CMTariffPlanGroupIterator.length;i++){
            this.CMTariffPlanGroupUI.CMTariffPlanGroupIterator[i].model.readonly = this.model.readonly;
        }

        for(var i=0;i<this.CMWalletApplicationUI.CMWalletApplicationIterator.length;i++){
            this.CMWalletApplicationUI.CMWalletApplicationIterator[i].model.readonly = this.model.readonly;
        }
      ]]></script>
    </method>
    <method name="refreshWalletApplicationUI" type="uimthd">
      <parameterList>
        <parameter name="index" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.Integer</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        // Refresh WalletApplicationUI after select different TariffPlanGroup
        this.selectedTariffPlanGroup = index;
        this.CMWalletApplicationUI.CMWalletApplicationIterator = new Array();
        if(index>=0){
            var listDS = this.model.CMCMByPlanGroupArrDS.ListDS[index].CMBPGWalletApplicationArrDS.ListDS
            cm_spoc.loadListElements(this.CMWalletApplicationUI, listDS, "cm_spoc.forms.CMWalletApplicationRuleUI", "CMWalletApplicationIterator");
            var iterator = this.CMWalletApplicationUI.CMWalletApplicationIterator;
            for(var j=0;j<iterator.length;j++){
               if(iterator[j].model.WalletUsageRule){
                   iterator[j].model.WalletUsageRuleEnum = iterator[j].model.WalletUsageRule;
               }
            }
        }
      ]]></script>
    </method>
    <method name="removeSelectedTariffPlanGroup" type="uimthd">
      <script><![CDATA[cm_spoc.removeListElements(this,this.model.CMCMByPlanGroupArrDS,"List","CMTariffPlanGroupIterator");]]></script>
    </method>
    <method name="enabledChargingModality" type="permMethod">
      <script>return !this.parent.parentFinderUI.isStored;</script>
    </method>
  </methodList>
</userInterface>