    <method name="PWWVisRule" type="permMethod">
      <script><![CDATA[
        if(!this.model.AccumulatedTopUps){
            this.model.PromotionUsingWindowDS = null;

            if(this.PromotionWithoutWindowForm == null){
                this.model.PromotionWithoutWindowDS = this.tmpPromotionWithoutWindow.copy();
                this.PromotionWithoutWindowForm = new cm_spoc.forms.PromotionWithoutWindowForm(this.model.PromotionWithoutWindowDS,this);
            }
            return true;
        }
        this.PromotionWithoutWindowForm = null;
        return false;
      ]]></script>
    </method>
    <method name="selectTrigger" type="uimthd">
      <script>return;</script>
    </method>
    <method name="PUWVisRule" type="permMethod">
      <script><![CDATA[
        if(this.model.AccumulatedTopUps){
            this.model.PromotionWithoutWindowDS = null;

            if(this.PromotionUsingWindowForm == null){
                this.model.PromotionUsingWindowDS = this.tmpPromotionUsingWindow.copy();
                this.PromotionUsingWindowForm = new cm_spoc.forms.PromotionUsingWindowForm(this.model.PromotionUsingWindowDS,this);
            }
            return true;
        }
        this.PromotionUsingWindowForm = null;
        return false;
      ]]></script>
    </method>
