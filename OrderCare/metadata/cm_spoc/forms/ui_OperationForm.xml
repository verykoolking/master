    <method name="addLanguage" type="uimthd">
      <script><![CDATA[
        var listDS = this.model.OpOperationLiteralArrDS.ListDS;

        cm_spoc.addListElementWithoutNodes(this, listDS,"cm_spoc.forms.LitLanguageUI","base_OperationLiteral","languageIterator");

        var languageIterator = this.languageIterator;
        for(var i=0;i<this.languageIterator.length;i++)
        {
            if(languageIterator[i].OperationId==null){
                languageIterator[i].defineSubOperationsByOperation();
            }
        }
      ]]></script>
    </method>
