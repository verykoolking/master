    <method name="referenceCallback" type="uimthd">
      <parameterList>
        <parameter name="itemCode" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
        <parameter name="baseItemCode" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        var s = new epc.data.Specification();
        s.project =  cwa_epc.getDefaultProj();

        s.specificationCode = itemCode;
        var operation = epc.getSpecificationByKey(s);
        if(operation)
        {
            this.model.OperationId = operation.OperationId;
        }

        var languageIterator = this.languageIterator;
        for(var i=0;i<this.languageIterator.length;i++)
        {
            if(languageIterator[i].OperationId!=this.model.OperationId){
                languageIterator[i].defineSubOperationsByOperation();
            }
        }
      ]]></script>
    </method>
