    <method name="cwLeafInitAction$model" type="laction">
      <path>ui_com.conceptwave.system.UserInterface/uivar_model</path>
      <type>initializer</type>
      <script><![CDATA[
        var model = cm_spoc.initOperations(this.model);
        cm_spoc.initOperationsUI(this);

        var listDS = this.model.OpOperationLiteralArrDS.ListDS;
        var iteratorUI = this.languageIterator;

        for(var i=0;i<listDS.length;i++)
        {
            iteratorUI[i].OperationId = model.OperationId;
            cm_spoc.loadSubOperationsInOperations(listDS[i],iteratorUI[i]);
        }
        return model;
      ]]></script>
    </method>
