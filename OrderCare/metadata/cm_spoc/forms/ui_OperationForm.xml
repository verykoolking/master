    <method name="setModel" type="uimthd">
      <parameterList>
        <parameter name="selectedItems" type="rifp">
          <array>true</array>
          <type>dstruct_cm_spoc.PickListDS</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        this.parent.model.DebtCausesArrDS.List.clear();
        for(var i=0;i<selectedItems.length;i++){
            this.parent.model.DebtCausesArrDS.List[i] = selectedItems[i].id;
