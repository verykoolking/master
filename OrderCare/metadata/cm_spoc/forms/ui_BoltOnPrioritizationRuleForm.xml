  </vformList>
  <methodList>
    <method name="cwLeafInitAction$model" type="laction">
      <path>ui_cm_spoc.forms.BoltOnPrioritizationRuleForm/leaf_model</path>
      <type>initializer</type>
      <script><![CDATA[
        var model = cm_spoc.initBoltOnPrioritizationRule(this.model);
        return model;
      ]]></script>
    </method>
    <method name="cwLeafInitAction$PickList" type="laction">
      <path>ui_cm_spoc.forms.BoltOnPrioritizationRuleForm/leaf_PickList</path>
      <type>initializer</type>
      <script><![CDATA[
        var pl = new cm_spoc.PickList(null,this);
        pl.availableItems = new DataObjectList();

        pl.modelCallback = this.setModel;

        var itemFinder = new Finder("cm_spoc.catalogItemFilteredFinder");
        itemFinder.searchDocument.baseItemCode = "base_BoltOnType";
        var result = itemFinder.search();



        var listSel=this.model.BPRBoltOnTypeArrDS.List;



        /*
            for (var i=0;i<listRel.length;i++){
               if(!api_common.isFault(r)){
                  var item = new cm_spoc.PickListDS();
                item.id = r.itemCode;
                item.description =r.itemCode;
                 pl.selectedItems.addLast(item);
                 }
           }
        */
        for(var i=0;i<result.length;i++){

                var item = new cm_spoc.PickListDS();
                item.id = result[i].itemCode;
                item.description = result[i].itemCode;

                if(listSel ==null)
                {
                 pl.availableItems.addLast(item);
                }
                else
                {

                    var found = false;
                    for(var j=0;j<listSel.length;j++)
                       if(listSel[j].equals(result[i].itemCode))
                        {
                            found = true;
                        }

                    if( found){
                        pl.selectedItems.addLast(item);

                    }else{

                         pl.availableItems.addLast(item);
                    }

                }


        }

        return pl;
      ]]></script>
    </method>
    <method name="setModel" type="uimthd">
      <parameterList>
        <parameter name="selectedItems" type="rifp">
          <array>true</array>
          <type>dstruct_cm_spoc.PickListDS</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        var s = new epc.data.Specification();
        s.project =  cwa_epc.getDefaultProj();

        this.parent.model.BPRBoltOnTypeArrDS.List =null;
        for(var i=0;i<selectedItems.length;i++){
            this.parent.model.BPRBoltOnTypeArrDS.List[i] = selectedItems[i].id;
        }
        var listRel=this.parent.model.BPRBoltOnTypeArrDS.List;
         var list  = this.parent.model.BPRBoltOnTypeArrDS.ListDS;
           for (var i=0;i<listRel.length;i++){
               s.specificationCode = listRel[i];
               var r = epc.getSpecificationByKey(s);
               if(!api_common.isFault(r))
                  this.parent.model.BPRBoltOnTypeArrDS.ListDS[i]=r;
           }
      ]]></script>
    </method>
    <method name="setAppConditionSelected" type="uimthd">
      <script>this.model.ApplicabilityCondition=this.model.ApplicabilityConditionEnum;</script>
    </method>
    <method name="setReadOnly" type="uimthd"/>
  </methodList>
</userInterface>