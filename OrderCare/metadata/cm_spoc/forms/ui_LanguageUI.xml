<?xml version="1.0" encoding="UTF-8" ?>
<userInterface name="cm_spoc.forms.LanguageUI">
  <group>MixedBolton</group>
  <label>LanguageUI</label>
  <metaVersion>4</metaVersion>
  <variableList>
    <variable name="parentUI" type="leaf">
      <valueType>ui_cm_spoc.forms.MixedBoltOnForm</valueType>
    </variable>
    <variable name="model" type="leaf">
      <valueType>dstruct_cm_spoc.data.IVRBoltOnDescription</valueType>
    </variable>
    <variable name="Selected" type="leaf">
      <valueType>dtype_com.conceptwave.system.Boolean</valueType>
    </variable>
  </variableList>
  <vformList>
    <vform name="Forms" type="frmui">
      <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms</extends>
      <overlayList>
        <overlay name="Default" type="exov">
          <base>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</base>
          <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</extends>
          <label>Default</label>
          <overrideList>
            <override name="HorizontalLayout2" type="elhlt">
              <width>700px</width>
              <elementList>
                <element name="Selected" type="elchk">
                  <columnSpan>1</columnSpan>
                  <editable type="varPath">
                    <variablePathList>
                      <variablePath>ui_cm_spoc.forms.LanguageUI/leaf_parentUI</variablePath>
                      <variablePath>ui_cm_spoc.forms.MixedBoltOnForm/permMethod_NotReadOnly</variablePath>
                    </variablePathList>
                  </editable>
                  <removeLabelLine>true</removeLabelLine>
                  <showLabel>false</showLabel>
                  <variable type="varPath">
                    <variablePathList>
                      <variablePath>ui_cm_spoc.forms.LanguageUI/leaf_Selected</variablePath>
                    </variablePathList>
                  </variable>
                  <width>20px</width>
                </element>
                <element name="HorizontalLayout" type="elhlt">
                  <alignment>center,center</alignment>
                  <width>340px</width>
                  <elementList>
                    <element name="Language" type="elfld">
                      <autoFocusNextField>false</autoFocusNextField>
                      <columnSpan>2</columnSpan>
                      <editable type="varPath">
                        <variablePathList>
                          <variablePath>dtype_com.conceptwave.system.Boolean/leaf_FALSE</variablePath>
                        </variablePathList>
                      </editable>
                      <removeLabelLine>true</removeLabelLine>
                      <showLabel>false</showLabel>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.LanguageUI/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.IVRBoltOnDescription/dstruct_Language</variablePath>
                        </variablePathList>
                      </variable>
                      <width>280px</width>
                    </element>
                    <element name="EditLanguage" type="elbtn">
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.LanguageUI/usrActionMethod_LanguagePickListDialog</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <icon>/cwf/finder.gif</icon>
                      <width>22px</width>
                    </element>
                  </elementList>
                </element>
                <element name="HorizontalLayout1" type="elhlt">
                  <alignment>center,center</alignment>
                  <width>340px</width>
                  <elementList>
                    <element name="IVRBoltOnDescription" type="elfld">
                      <autoFocusNextField>false</autoFocusNextField>
                      <columnSpan>2</columnSpan>
                      <editable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.LanguageUI/leaf_parentUI</variablePath>
                          <variablePath>ui_cm_spoc.forms.MixedBoltOnForm/permMethod_NotReadOnly</variablePath>
                        </variablePathList>
                      </editable>
                      <removeLabelLine>true</removeLabelLine>
                      <showLabel>false</showLabel>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.LanguageUI/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.IVRBoltOnDescription/dstruct_IVRBoltOnDescription</variablePath>
                        </variablePathList>
                      </variable>
                      <width>280px</width>
                    </element>
                  </elementList>
                </element>
              </elementList>
            </override>
          </overrideList>
        </overlay>
      </overlayList>
    </vform>
  </vformList>
  <methodList>
    <method name="getParentUI" type="uimthd">
      <script>return this.parentUI;</script>
    </method>
    <method name="setParentUI" type="uimthd">
      <parameterList>
        <parameter name="ui" type="rifp">
          <mandatory>true</mandatory>
          <type>ui_com.conceptwave.system.UserInterface</type>
        </parameter>
      </parameterList>
      <script>this.parentUI = ui;</script>
    </method>
    <method name="LanguagePickListDialog" type="usrActionMethod">
      <dialogObject>ui_com.conceptwave.system.Dialog</dialogObject>
      <showInPopup>true</showInPopup>
      <script><![CDATA[
        var newDetail = new cm_spoc.forms.pickListLanguage(null,this);
        newDetail.languages = new DataObjectList();
        var ct = Global.getCTCodesAndDescriptions("LanguageCodeTable");
        //var util=this.model.IVRBoltOnDescriptionArrDS.ListDS;
        var util=this.model.parent.length;


        for(var i=0;i<ct.length;i++){

            var find = false;
            for(var j=0;j<util.length;j++){
                if (ct[i+1]==util[j].Language){
                    find = true;
                    break;
                }
            }
            if(!find){
                var item = new cm_spoc.PickListDS();
                item.id = ct[i];
                item.description = ct[i+1];
                newDetail.languages.addLast(item);
            }
            i++;
        }
        newDetail.setParentUI(this);
        newDetail.model=this.model;
        return newDetail;
      ]]></script>
    </method>
  </methodList>
</userInterface>