<?xml version="1.0" encoding="UTF-8" ?>
<userInterface name="cm_spoc.forms.TariffPlanChange">
  <group>Promotion</group>
  <label>TariffPlanChange</label>
  <metaVersion>4</metaVersion>
  <variableList>
    <variable name="model" type="leaf">
      <valueType>dstruct_cm_spoc.data.TariffPlanChangeCriterion</valueType>
    </variable>
  </variableList>
  <vformList>
    <vform name="Forms" type="frmui">
      <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms</extends>
      <overlayList>
        <overlay name="Default" type="exov">
          <base>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</base>
          <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</extends>
          <label>Default</label>
          <overrideList>
            <override name="VerticalLayout" type="elvlt">
              <width>750px</width>
              <elementList>
                <element name="SectionStack" type="elsectnstck">
                  <visibilityMode>multiple</visibilityMode>
                  <elementList>
                    <element name="Section" type="elsect">
                      <elementList>
                        <element name="SectionHeader" type="elsecth">
                          <label>Tariff Plan Changes</label>
                        </element>
                        <element name="Label" type="ellab">
                          <label>The subscriber must have made a change of plan in the past</label>
                          <width>300px</width>
                        </element>
                        <element name="LayoutSpacer1" type="ellsp">
                          <height>20px</height>
                        </element>
                        <element name="SectionStack1" type="elsectnstck">
                          <elementList>
                            <element name="Section1" type="elsect">
                              <elementList>
                                <element name="SectionHeader1" type="elsecth">
                                  <label>Tiime Interval</label>
                                </element>
                                <element name="GridLayout" type="elgrd">
                                  <alignment>center,center</alignment>
                                  <numOfCols>4</numOfCols>
                                  <width>200px</width>
                                  <elementList>
                                    <element name="TimeIntervalType" type="elslct">
                                      <label>Time Interval Type</label>
                                      <labelOrientation>left</labelOrientation>
                                      <variable type="varPath">
                                        <variablePathList>
                                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/leaf_model</variablePath>
                                          <variablePath>dstruct_cm_spoc.data.TariffPlanChangeCriterion/dstruct_TimeIntervalType</variablePath>
                                        </variablePathList>
                                      </variable>
                                    </element>
                                    <element name="RowSpacer" type="elrsp"/>
                                    <element name="LessThan" type="elfld">
                                      <labeAlign>left</labeAlign>
                                      <label>Less than:</label>
                                      <labelOrientation>left</labelOrientation>
                                      <variable type="varPath">
                                        <variablePathList>
                                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/leaf_model</variablePath>
                                          <variablePath>dstruct_cm_spoc.data.TariffPlanChangeCriterion/dstruct_LessThan</variablePath>
                                        </variablePathList>
                                      </variable>
                                    </element>
                                    <element name="Day" type="elslct">
                                      <labelOrientation>right</labelOrientation>
                                      <showLabel>false</showLabel>
                                      <variable type="varPath">
                                        <variablePathList>
                                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/leaf_model</variablePath>
                                          <variablePath>dstruct_cm_spoc.data.TariffPlanChangeCriterion/dstruct_Day</variablePath>
                                        </variablePathList>
                                      </variable>
                                    </element>
                                    <element name="InTheCurrent" type="elslct">
                                      <labeAlign>left</labeAlign>
                                      <label>In the current:</label>
                                      <labelOrientation>left</labelOrientation>
                                      <variable type="varPath">
                                        <variablePathList>
                                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/leaf_model</variablePath>
                                          <variablePath>dstruct_cm_spoc.data.TariffPlanChangeCriterion/dstruct_InTheCurrent</variablePath>
                                        </variablePathList>
                                      </variable>
                                    </element>
                                  </elementList>
                                </element>
                              </elementList>
                            </element>
                          </elementList>
                        </element>
                      </elementList>
                    </element>
                  </elementList>
                </element>
                <element name="LayoutSpacer" type="ellsp">
                  <height>30px</height>
                </element>
                <element name="GridLayout1" type="elgrd">
                  <numOfCols>3</numOfCols>
                  <width>200px</width>
                  <elementList>
                    <element name="FromPlan" type="elfld">
                      <editable type="varPath">
                        <variablePathList>
                          <variablePath>dtype_com.conceptwave.system.Boolean/leaf_FALSE</variablePath>
                        </variablePathList>
                      </editable>
                      <labeAlign>left</labeAlign>
                      <label>From the plan:</label>
                      <labelOrientation>left</labelOrientation>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.TariffPlanChangeCriterion/dstruct_FromPlan</variablePath>
                        </variablePathList>
                      </variable>
                      <width>150px</width>
                    </element>
                    <element name="FromButton" type="elbtn">
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/usrActionMethod_FinderFromTPMessageReferenceDialog</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <icon>/cwf/finder.gif</icon>
                      <showLabel>false</showLabel>
                      <width>25px</width>
                    </element>
                    <element name="ToPlan" type="elfld">
                      <editable type="varPath">
                        <variablePathList>
                          <variablePath>dtype_com.conceptwave.system.Boolean/leaf_FALSE</variablePath>
                        </variablePathList>
                      </editable>
                      <labeAlign>left</labeAlign>
                      <label>To the plan:</label>
                      <labelOrientation>left</labelOrientation>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.TariffPlanChangeCriterion/dstruct_ToPlan</variablePath>
                        </variablePathList>
                      </variable>
                      <width>150px</width>
                    </element>
                    <element name="ToButton" type="elbtn">
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/usrActionMethod_FinderToTPMessageReferenceDialog</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <icon>/cwf/finder.gif</icon>
                      <showLabel>false</showLabel>
                      <width>25px</width>
                    </element>
                    <element name="NumberOfChanges" type="elfld">
                      <labeAlign>left</labeAlign>
                      <label>Number of changes</label>
                      <labelOrientation>left</labelOrientation>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.TariffPlanChangeCriterion/dstruct_NumberOfChanges</variablePath>
                        </variablePathList>
                      </variable>
                      <width>150px</width>
                    </element>
                  </elementList>
                </element>
                <element name="VerticalLayout1" type="elhlt">
                  <alignment>right,center</alignment>
                  <elementList>
                    <element name="OK" type="elbtn">
                      <cellAlignment>right,center</cellAlignment>
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/uimthd_onClickOk</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <label>Accept</label>
                    </element>
                    <element name="Cancel" type="elbtn">
                      <canSort>false</canSort>
                      <cellAlignment>center,center</cellAlignment>
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.TariffPlanChange/uimthd_onClickCancel</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <label>Cancel</label>
                    </element>
                  </elementList>
                </element>
              </elementList>
            </override>
          </overrideList>
        </overlay>
      </overlayList>
    </vform>
  </vformList>
  <methodList>
    <method name="FinderFromTPMessageReferenceDialog" type="usrActionMethod">
      <dialogObject>ui_com.conceptwave.system.Dialog</dialogObject>
      <showInPopup>true</showInPopup>
      <script><![CDATA[
        this.parent.owner.TPChangeType = 1;
        var newDetail = new cm_spoc.FinderSelectReference(null, this);
        newDetail.setBaseItemCode("base_TariffPlan");
        newDetail.parentUI = this;
        return newDetail;
      ]]></script>
    </method>
    <method name="referenceCallback" type="uimthd">
      <parameterList>
        <parameter name="itemCode" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
        <parameter name="baseItemCode" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        switch(baseItemCode){
                case "base_TariffPlan":
                    if(this.parent.owner.TPChangeType == 1 )
                        this.model.FromPlan = itemCode;
                    if(this.parent.owner.TPChangeType == 2)
                        this.model.ToPlan = itemCode;
                break;


        }
      ]]></script>
    </method>
    <method name="FinderToTPMessageReferenceDialog" type="usrActionMethod">
      <dialogObject>ui_com.conceptwave.system.Dialog</dialogObject>
      <showInPopup>true</showInPopup>
      <script><![CDATA[
        this.parent.owner.TPChangeType = 2;
        var newDetail = new cm_spoc.FinderSelectReference(null, this);
        newDetail.setBaseItemCode("base_TariffPlan");
        newDetail.parentUI = this;
        return newDetail;
      ]]></script>
    </method>
    <method name="onClickCancel" type="uimthd">
      <script>this.parent.cwDialogClose();</script>
    </method>
    <method name="onClickOk" type="uimthd">
      <script><![CDATA[
        this.parent.owner.model.PSTPChangeCriterionArrDS.List[this.parent.owner.model.PSTPChangeCriterionArrDS.List.length] =  this.model;
        this.parent.owner.model.PSTPChangeCriterionArrDS.ListDS[this.parent.owner.model.PSTPChangeCriterionArrDS.ListDS.length] =  this.model;


        if(this.parent.owner.model.PSTPChangeCriterionArrDS.List.length>0){

            if(this.parent.owner.ListHistoric==null)
                this.parent.owner.ListHistoric = new DataObjectList();
            //Check if the label was added
            var exist = false;
            for(var j=0; j< this.parent.owner.ListHistoric.length; j++){
                if( this.parent.owner.ListHistoric[j].description == "Tariff Plan Change" && this.parent.owner.ListHistoric[j].itemCode == this.model.specificationCode){
                     exist=true;
                }
            }
            if(!exist){
                var item = new cm_spoc.FinderSelectReferenceDS();
                item.description = "Tariff Plan Change";
                item.itemCode = this.model.specificationCode;
                this.parent.owner.ListHistoric.addLast(item);
                this.parent.owner.ListHistoric.updateList;
            }
        }else{
            for(var k=0; k< this.parent.owner.ListHistoric.length; k++){
                if( this.parent.owner.ListHistoric[k].description == "Tariff Plan Change" &&  this.parent.owner.ListHistoric[k].itemCode)
                     this.parent.owner.ListHistoric.delete(k);
            }
        }

        var valTIT=this.model.TimeIntervalType;
        var valLT=this.model.LessThan;
        var valITC=this.model.InTheCurrent;
        var valDay=this.model.Day;
        if (!valLT && valTIT=="R")
        {
            cm_spoc.rule_TPCCLessThanMandatoryCondRule(this);
            return;
        }
        if (!valITC && valTIT=="A"){
            cm_spoc.rule_TPCCInTheCurrentMandatoryCondRule(this);
            return;
        }

        if (!valDay && valTIT=="R"){
            cm_spoc.rule_TPCCDayMandatoryCondRule(this);
            return;
        }


        this.parent.cwDialogClose();
      ]]></script>
    </method>
  </methodList>
</userInterface>