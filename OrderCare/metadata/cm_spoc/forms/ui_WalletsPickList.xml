<?xml version="1.0" encoding="UTF-8" ?>
<userInterface name="cm_spoc.forms.WalletsPickList">
  <group>TariffPlan</group>
  <label>WalletsPickList</label>
  <metaVersion>4</metaVersion>
  <variableList>
    <variable name="model" type="leaf">
      <valueType>dstruct_cm_spoc.data.NotifWalletRule</valueType>
    </variable>
    <variable name="pickList" type="leaf">
      <valueType>ui_cm_spoc.PickList</valueType>
    </variable>
  </variableList>
  <vformList>
    <vform name="Forms" type="frmui">
      <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms</extends>
      <overlayList>
        <overlay name="Default" type="exov">
          <base>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</base>
          <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</extends>
          <label>Default</label>
          <overrideList>
            <override name="VerticalLayout" type="elvlt">
              <elementList>
                <element name="FormFrame" type="elovf">
                  <formReference type="varPath">
                    <variablePathList>
                      <variablePath>ui_cm_spoc.forms.WalletsPickList/leaf_pickList</variablePath>
                      <variablePath>ui_cm_spoc.PickList/frmui_Forms</variablePath>
                      <variablePath>ui_cm_spoc.PickList/frmui_Forms/exov_Default</variablePath>
                    </variablePathList>
                  </formReference>
                  <height>175px</height>
                  <variable type="varPath">
                    <variablePathList>
                      <variablePath>ui_cm_spoc.forms.WalletsPickList/leaf_pickList</variablePath>
                    </variablePathList>
                  </variable>
                  <width>500px</width>
                </element>
                <element name="Separator" type="elsep">
                  <width>500px</width>
                </element>
                <element name="ButtonsHL" type="elhlt">
                  <alignment>center,center</alignment>
                  <fillSpace>false</fillSpace>
                  <snapOnMouseOver>false</snapOnMouseOver>
                  <width>500px</width>
                  <elementList>
                    <element name="LayoutSpacer2" type="ellsp">
                      <width>55px</width>
                    </element>
                    <element name="OK" type="elbtn">
                      <cellAlignment></cellAlignment>
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.WalletsPickList/uimthd_onClickOk</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <label>Accept</label>
                    </element>
                    <element name="LayoutSpacer1" type="ellsp">
                      <width>50px</width>
                    </element>
                    <element name="Cancel" type="elbtn">
                      <canSort>false</canSort>
                      <cellAlignment>center,center</cellAlignment>
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.WalletsPickList/uimthd_onClickCancel</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <label>Cancel</label>
                    </element>
                  </elementList>
                </element>
              </elementList>
            </override>
          </overrideList>
        </overlay>
      </overlayList>
    </vform>
  </vformList>
  <methodList>
    <method name="cwLeafInitAction$pickList" type="laction">
      <path>ui_cm_spoc.forms.WalletsPickList/leaf_pickList</path>
      <type>initializer</type>
      <script><![CDATA[
        var itemFinder = new Finder("cm_spoc.catalogItemFilteredFinder");
        itemFinder.searchDocument.baseItemCode = "base_Wallet";
        var result = itemFinder.search();

        var pl = cm_spoc.initPickList(this,result,this.parent.model.NWRWalletArrDS.List,"itemCode","itemCode");
        pl.modelCallback = this.setNWRPickListModel;

        return pl;
      ]]></script>
    </method>
    <method name="onClickCancel" type="uimthd">
      <script>this.parent.cwDialogClose();</script>
    </method>
    <method name="onClickOk" type="uimthd">
      <script><![CDATA[
        this.setAllowedWalletsLabel();
        this.parent.cwDialogClose();
      ]]></script>
    </method>
    <method name="setAllowedWalletsLabel" type="uimthd">
      <script><![CDATA[
        var arr = this.parent.owner.model.NWRWalletArrDS.List;
        var item = "";
        if(arr.length > 0 ){
            for ( var i = 0; i<arr.length; i++ ){
                if ( i>0 )
                    item = item + ",";
                item = item + arr[i];
            }
        }
        this.parent.owner.AllowedWalletsLabel = item;
      ]]></script>
    </method>
    <method name="setNWRPickListModel" type="uimthd">
      <parameterList>
        <parameter name="selectedItems" type="rifp">
          <type>dstruct_cm_spoc.PickListDS</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        this.parent.model.NWRWalletArrDS.List = null;
        this.parent.model.NWRWalletArrDS.ListDS = null;
        for(var i=0;i<this.selectedItems.length;i++){
            this.parent.model.NWRWalletArrDS.List[i] = this.selectedItems[i].id;
        }
      ]]></script>
    </method>
  </methodList>
</userInterface>