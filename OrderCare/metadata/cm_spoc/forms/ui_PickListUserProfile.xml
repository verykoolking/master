<?xml version="1.0" encoding="UTF-8" ?>
<userInterface name="cm_spoc.forms.PickListUserProfile">
  <group>BoltOn</group>
  <label>PickListUserProfile</label>
  <metaVersion>4</metaVersion>
  <variableList>
    <variable name="pickList" type="leaf">
      <valueType>ui_cm_spoc.PickList</valueType>
    </variable>
    <variable name="model" type="leaf">
      <valueType>dstruct_cm_spoc.data.BoltOnSubscription</valueType>
    </variable>
  </variableList>
  <vformList>
    <vform name="Forms" type="frmui">
      <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms</extends>
      <overlayList>
        <overlay name="Default" type="exov">
          <base>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</base>
          <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</extends>
          <label>Default</label>
          <overrideList>
            <override name="VerticalLayout" type="elvlt">
              <height>175px</height>
              <width>275px</width>
              <elementList>
                <element name="FormFrame" type="elovf">
                  <formReference type="varPath">
                    <variablePathList>
                      <variablePath>ui_cm_spoc.forms.PickListUserProfile/leaf_pickList</variablePath>
                      <variablePath>ui_cm_spoc.PickList/frmui_Forms</variablePath>
                      <variablePath>ui_cm_spoc.PickList/frmui_Forms/exov_Default</variablePath>
                    </variablePathList>
                  </formReference>
                  <height>175px</height>
                  <variable type="varPath">
                    <variablePathList>
                      <variablePath>ui_cm_spoc.forms.PickListUserProfile/leaf_pickList</variablePath>
                    </variablePathList>
                  </variable>
                  <width>500px</width>
                </element>
                <element name="Separator" type="elsep">
                  <width>500px</width>
                </element>
                <element name="ButtonsHL" type="elhlt">
                  <alignment>center,center</alignment>
                  <fillSpace>false</fillSpace>
                  <snapOnMouseOver>false</snapOnMouseOver>
                  <width>500px</width>
                  <elementList>
                    <element name="LayoutSpacer2" type="ellsp">
                      <width>55px</width>
                    </element>
                    <element name="OK" type="elbtn">
                      <autofit>true</autofit>
                      <cellAlignment></cellAlignment>
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.PickListUserProfile/uimthd_onClickOk</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <label>Accept</label>
                    </element>
                    <element name="LayoutSpacer1" type="ellsp">
                      <width>50px</width>
                    </element>
                    <element name="Cancel" type="elbtn">
                      <canSort>false</canSort>
                      <cellAlignment>center,center</cellAlignment>
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.PickListUserProfile/uimthd_onClickCancel</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <label>Cancel</label>
                    </element>
                  </elementList>
                </element>
              </elementList>
            </override>
          </overrideList>
        </overlay>
      </overlayList>
    </vform>
  </vformList>
  <methodList>
    <method name="cwLeafInitAction$pickList" type="laction">
      <path>ui_cm_spoc.forms.PickListUserProfile/leaf_pickList</path>
      <type>initializer</type>
      <valueType>ui_cm_spoc.forms.PickListUserProfile/leaf_pickList</valueType>
      <script><![CDATA[
        var selected = this.model.CustomerProfile;
        if(selected){
           selected = this.model.CustomerProfile.split(",");
           return cm_spoc.initPickListFromCodeTable(this,"CustomerProfileCodeTable",selected);
        }else{
           return cm_spoc.initPickListFromCodeTable(this,"CustomerProfileCodeTable",null);
        }
      ]]></script>
    </method>
    <method name="onClickCancel" type="uimthd">
      <script>this.parent.cwDialogClose();</script>
    </method>
    <method name="onClickOk" type="uimthd">
      <script><![CDATA[
        //this.model.CustomerProfile = this.getSelectedItems();
        this.model = this.parent.owner.model;
        var selectedCustomer =  this.model.CustomerProfile;
        var selected;
        var i = 0;
        if(this.pickList.selectedItems.length>0){
            selected =  this.pickList.selectedItems[0].id;
            for(var i=1;i<this.pickList.selectedItems.length;i++){
                selected = selected+","+this.pickList.selectedItems[i].id;
            }
        }

        this.model.CustomerProfile = selected;
        this.parent.cwDialogClose();
      ]]></script>
    </method>
  </methodList>
</userInterface>