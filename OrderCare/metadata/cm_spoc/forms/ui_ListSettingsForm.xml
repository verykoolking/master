  <methodList>
    <method name="cwLeafInitAction$ListSettingsPickList" type="laction">
      <path>ui_cm_spoc.forms.ListSettingsForm/leaf_ListSettingsPickList</path>
      <type>initializer</type>
      <script><![CDATA[
        var pl = new cm_spoc.PickList(null,this);
        pl.modelCallback = this.setModel;

        pl.availableItems = new DataObjectList();
        var itemFinder = new Finder("cm_spoc.LifeCycleInternalSubstatusStatusAtribFinder");


        var result = itemFinder.search();
        for(var i=0;i<result.length;i++){
            var item = new cm_spoc.PickListDS();
            item.id=result[i].itemCode;
            //item.description=result[i].description;
            var msgArray = result[i].msgToDisp.split("-");
            var msgArray2 = msgArray[0].split(" ");
            var myCode = msgArray2[0];
            var ct = Global.getCTCodesAndDescriptions("StatusCodeTable");
            var statusDescription;
            for(var j=0; j<ct.length; j++){
                if(ct[j]==myCode){
                    var indDesc=j+1;
                    statusDescription = ct[indDesc];
                }
            }
            var finalLabel = statusDescription + " / " + msgArray[1];
            item.description = finalLabel;
            pl.availableItems.addLast(item);
        }



        /*var listDS = this.model.ListAllowedStateArrDS.ListDS;
        for(var i=0;i<listDS.length;i++){
            var item = new cm_spoc.PickListDS();
            item.id= listDS.ListDS[i].AllowedSubscriberState;
            pl.selectedItems.addLast(item);
        }*/

        return pl;
      ]]></script>
    </method>
