<?xml version="1.0" encoding="UTF-8" ?>
<userInterface name="cm_spoc.forms.ObtainingPromotions">
  <group>Promotion</group>
  <label>ObtainingPromotions</label>
  <metaVersion>4</metaVersion>
  <variableList>
    <variable name="model" type="leaf">
      <valueType>dstruct_cm_spoc.data.AssignedPromotionCriterion</valueType>
    </variable>
  </variableList>
  <vformList>
    <vform name="Forms" type="frmui">
      <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms</extends>
      <overlayList>
        <overlay name="Default" type="exov">
          <base>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</base>
          <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</extends>
          <label>Default</label>
          <overrideList>
            <override name="VerticalLayout" type="elvlt">
              <width>750px</width>
              <elementList>
                <element name="SectionStack" type="elsectnstck">
                  <visibilityMode>multiple</visibilityMode>
                  <elementList>
                    <element name="Section" type="elsect">
                      <elementList>
                        <element name="SectionHeader" type="elsecth">
                          <label>Obtaining promotions</label>
                        </element>
                        <element name="LayoutSpacer1" type="ellsp">
                          <height>60px</height>
                        </element>
                        <element name="SectionStack1" type="elsectnstck">
                          <elementList>
                            <element name="Section1" type="elsect">
                              <elementList>
                                <element name="SectionHeader1" type="elsecth">
                                  <label>The subscriber must have the promotion</label>
                                </element>
                                <element name="GridLayout" type="elgrd">
                                  <alignment>center,center</alignment>
                                  <numOfCols>4</numOfCols>
                                  <width>600px</width>
                                  <elementList>
                                    <element name="TimeIntervalType" type="elslct">
                                      <labeAlign>left</labeAlign>
                                      <label>Time Interval Type</label>
                                      <labelOrientation>left</labelOrientation>
                                      <variable type="varPath">
                                        <variablePathList>
                                          <variablePath>ui_cm_spoc.forms.ObtainingPromotions/leaf_model</variablePath>
                                          <variablePath>dstruct_cm_spoc.data.AssignedPromotionCriterion/dstruct_TimeIntervalType</variablePath>
                                        </variablePathList>
                                      </variable>
                                    </element>
                                    <element name="RowSpacer" type="elrsp"/>
                                    <element name="LessThan" type="elfld">
                                      <labeAlign>left</labeAlign>
                                      <label>Less than:</label>
                                      <labelOrientation>left</labelOrientation>
                                      <variable type="varPath">
                                        <variablePathList>
                                          <variablePath>ui_cm_spoc.forms.ObtainingPromotions/leaf_model</variablePath>
                                          <variablePath>dstruct_cm_spoc.data.AssignedPromotionCriterion/dstruct_LessThan</variablePath>
                                        </variablePathList>
                                      </variable>
                                    </element>
                                    <element name="Day" type="elslct">
                                      <labelOrientation>right</labelOrientation>
                                      <showLabel>false</showLabel>
                                      <variable type="varPath">
                                        <variablePathList>
                                          <variablePath>ui_cm_spoc.forms.ObtainingPromotions/leaf_model</variablePath>
                                          <variablePath>dstruct_cm_spoc.data.AssignedPromotionCriterion/dstruct_Day</variablePath>
                                        </variablePathList>
                                      </variable>
                                    </element>
                                    <element name="InTheCurrent" type="elslct">
                                      <labeAlign>left</labeAlign>
                                      <label>In the current:</label>
                                      <labelOrientation>left</labelOrientation>
                                      <variable type="varPath">
                                        <variablePathList>
                                          <variablePath>ui_cm_spoc.forms.ObtainingPromotions/leaf_model</variablePath>
                                          <variablePath>dstruct_cm_spoc.data.AssignedPromotionCriterion/dstruct_InTheCurrent</variablePath>
                                        </variablePathList>
                                      </variable>
                                    </element>
                                  </elementList>
                                </element>
                              </elementList>
                            </element>
                          </elementList>
                        </element>
                      </elementList>
                    </element>
                  </elementList>
                </element>
                <element name="LayoutSpacer" type="ellsp">
                  <height>30px</height>
                </element>
                <element name="HorizontalLayout" type="elhlt">
                  <elementList>
                    <element name="AssignedPromCritType" type="elslct">
                      <labeAlign>left</labeAlign>
                      <label>Assigned promotion criterion type</label>
                      <labelOrientation>left</labelOrientation>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.ObtainingPromotions/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.AssignedPromotionCriterion/dstruct_AssignedPromCritType</variablePath>
                        </variablePathList>
                      </variable>
                      <width>150px</width>
                    </element>
                    <element name="NumberOfTimes" type="elfld">
                      <label>NT</label>
                      <labelOrientation>left</labelOrientation>
                      <showLabel>false</showLabel>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.ObtainingPromotions/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.AssignedPromotionCriterion/dstruct_NumberOfTimes</variablePath>
                        </variablePathList>
                      </variable>
                    </element>
                    <element name="TotalAmount" type="elfld">
                      <labelOrientation>left</labelOrientation>
                      <showLabel>false</showLabel>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.ObtainingPromotions/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.AssignedPromotionCriterion/dstruct_TotalAmount</variablePath>
                        </variablePathList>
                      </variable>
                    </element>
                  </elementList>
                </element>
                <element name="Separator" type="elsep">
                  <width>750px</width>
                </element>
                <element name="VerticalLayout1" type="elhlt">
                  <alignment>right,center</alignment>
                  <elementList>
                    <element name="OK" type="elbtn">
                      <cellAlignment>right,center</cellAlignment>
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.ObtainingPromotions/uimthd_onClickOk</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <label>Accept</label>
                    </element>
                    <element name="Cancel" type="elbtn">
                      <canSort>false</canSort>
                      <cellAlignment>center,center</cellAlignment>
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.ObtainingPromotions/uimthd_onClickCancel</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <label>Cancel</label>
                    </element>
                  </elementList>
                </element>
              </elementList>
            </override>
          </overrideList>
        </overlay>
      </overlayList>
    </vform>
  </vformList>
  <methodList>
    <method name="onClickCancel" type="uimthd">
      <script>this.parent.cwDialogClose();</script>
    </method>
    <method name="onClickOk" type="uimthd">
      <script><![CDATA[
        this.parent.owner.model.PSAssignedPromCriterionArrDS.List[this.parent.owner.model.PSAssignedPromCriterionArrDS.List.length] =  this.model;
        this.parent.owner.model.PSAssignedPromCriterionArrDS.ListDS[this.parent.owner.model.PSAssignedPromCriterionArrDS.ListDS.length] =  this.model;

        if(this.parent.owner.model.PSAssignedPromCriterionArrDS.List.length>0){

            if(this.parent.owner.ListHistoric==null)
                this.parent.owner.ListHistoric = new DataObjectList();
            //Check if the label was added
            var exist = false;
            for(var j=0; j< this.parent.owner.ListHistoric.length; j++){
                if( this.parent.owner.ListHistoric[j].description == "Nº Promotion" && this.parent.owner.ListHistoric[j].itemCode == this.model.specificationCode){
                     exist=true;
                }
            }
            if(!exist){
                var item = new cm_spoc.FinderSelectReferenceDS();
                item.description = "Nº Promotion";
                item.itemCode = this.model.specificationCode;
                this.parent.owner.ListHistoric.addLast(item);
                this.parent.owner.ListHistoric.updateList;
            }
        }else{
            if(this.parent.owner.ListHistoric==null)
                this.parent.owner.ListHistoric = new DataObjectList();
            for(var k=0; k< this.parent.owner.ListHistoric.length; k++){
                if( this.parent.owner.ListHistoric[k].description == "Nº Promotion" &&  this.parent.owner.ListHistoric[k].itemCode)
                     this.parent.owner.ListHistoric.delete(k);
            }
            this.parent.owner.ListHistoric.updateList;
        }

        var valTIT=this.model.TimeIntervalType;
        var valLT=this.model.LessThan;
        var valITC=this.model.InTheCurrent;
        var valDay=this.model.Day;
        var valNOT=this.model.NumberOfTimes;
        var valTA=this.model.TotalAmount;
        var valAPCT=this.model.AssignedPromCritType;
        if (!valLT && valTIT=="R")
        {
            cm_spoc.rule_APCLessThanMandatoryCondRule(this);
            return;
        }
        if (!valITC && valTIT=="A"){
            cm_spoc.rule_APCInTheCurrentMandatoryCondRule(this);
            return;
        }

        if (!valDay && valTIT=="R"){
            cm_spoc.rule_APCDayMandatoryCondRule(this);
            return;
        }

        if (!valNOT && valAPCT=="N"){
            cm_spoc.rule_APCNumberOfTimesMandatoryCondRule(this);
            return;
        }
        if (!valTA && valAPCT=="T"){
            cm_spoc.rule_APCTotalAmountMandatoryCondRule(this);
            return;
        }

        this.parent.cwDialogClose();
      ]]></script>
    </method>
  </methodList>
</userInterface>