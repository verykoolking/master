<?xml version="1.0" encoding="UTF-8" ?>
<userInterface name="cm_spoc.forms.IncompatibilityIteratorUI">
  <group>Operation</group>
  <label>IncompatibilityIteratorUI</label>
  <metaVersion>4</metaVersion>
  <variableList>
    <variable name="model" type="leaf">
      <valueType>dstruct_cm_spoc.data.ConstraintByOperation</valueType>
    </variable>
    <variable name="Selected" type="leaf">
      <valueType>dtype_com.conceptwave.system.Boolean</valueType>
    </variable>
    <variable name="isBannedOp" type="leaf">
      <valueType>dtype_com.conceptwave.system.Boolean</valueType>
    </variable>
  </variableList>
  <vformList>
    <vform name="Forms" type="frmui">
      <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms</extends>
      <overlayList>
        <overlay name="Default" type="exov">
          <base>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</base>
          <extends>ui_com.conceptwave.system.UserInterface/frmui_Forms/vform_Default</extends>
          <label>Default</label>
          <overrideList>
            <override name="VerticalLayout" type="elvlt">
              <width>800px</width>
              <elementList>
                <element name="BoltOnInPhasesHeaders" type="elgrd">
                  <cellPadding>0</cellPadding>
                  <numOfCols>11</numOfCols>
                  <width>800px</width>
                  <elementList>
                    <element name="Selected" type="elchk">
                      <columnSpan>1</columnSpan>
                      <showLabel>false</showLabel>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.IncompatibilityIteratorUI/leaf_Selected</variablePath>
                        </variablePathList>
                      </variable>
                      <width>30px</width>
                    </element>
                    <element name="CellSpacer" type="elcsp">
                      <width>5px</width>
                    </element>
                    <element name="ConstraintAssignedToAnOriginOp" type="elfld">
                      <autoFocusNextField>false</autoFocusNextField>
                      <canSort>false</canSort>
                      <columnSpan>1</columnSpan>
                      <label>Operation</label>
                      <showLabel>false</showLabel>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.IncompatibilityIteratorUI/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.ConstraintByOperation/dstruct_ConstraintAssignedToAnOriginOp</variablePath>
                        </variablePathList>
                      </variable>
                      <width>150px</width>
                    </element>
                    <element name="OperationButton" type="elbtn">
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.IncompatibilityIteratorUI/usrActionMethod_FinderOperationReferenceDialog</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <icon>/cwf/finder.gif</icon>
                      <width>22px</width>
                    </element>
                    <element name="CellSpacer3" type="elcsp">
                      <width>5px</width>
                    </element>
                    <element name="ConstraintIncludesADestinationOp" type="elfld">
                      <autoFocusNextField>false</autoFocusNextField>
                      <canSort>false</canSort>
                      <columnSpan>1</columnSpan>
                      <label>Operation banned</label>
                      <showLabel>false</showLabel>
                      <variable type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.IncompatibilityIteratorUI/leaf_model</variablePath>
                          <variablePath>dstruct_cm_spoc.data.ConstraintByOperation/dstruct_ConstraintIncludesADestinationOp</variablePath>
                        </variablePathList>
                      </variable>
                      <width>150px</width>
                    </element>
                    <element name="bannedOperationIdButton" type="elbtn">
                      <clickMethod type="varPath">
                        <variablePathList>
                          <variablePath>ui_cm_spoc.forms.IncompatibilityIteratorUI/usrActionMethod_FinderBannedOperationReferenceDialog</variablePath>
                        </variablePathList>
                      </clickMethod>
                      <icon>/cwf/finder.gif</icon>
                      <width>22px</width>
                    </element>
                  </elementList>
                </element>
              </elementList>
            </override>
          </overrideList>
        </overlay>
      </overlayList>
    </vform>
  </vformList>
  <methodList>
    <method name="readOnly" type="permMethod">
      <script>return !this.model.readonly;</script>
    </method>
    <method name="FinderBannedOperationReferenceDialog" type="usrActionMethod">
      <dialogObject>ui_com.conceptwave.system.Dialog</dialogObject>
      <showInPopup>true</showInPopup>
      <script><![CDATA[
        var newDetail = new cm_spoc.FinderSelectReference(null,this);
        newDetail.setBaseItemCode("base_Operation");
        newDetail.parentUI = this;
        this.isBannedOp = true;
        return newDetail;
      ]]></script>
    </method>
    <method name="FinderOperationReferenceDialog" type="usrActionMethod">
      <dialogObject>ui_com.conceptwave.system.Dialog</dialogObject>
      <showInPopup>true</showInPopup>
      <script><![CDATA[
        var newDetail = new cm_spoc.FinderSelectReference(null,this);
        newDetail.setBaseItemCode("base_Operation");
        newDetail.parentUI = this;
        this.isBannedOp = false;
        return newDetail;
      ]]></script>
    </method>
    <method name="referenceCallback" type="uimthd">
      <parameterList>
        <parameter name="itemCode" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
        <parameter name="baseItemCode" type="rifp">
          <mandatory>true</mandatory>
          <type>dtype_com.conceptwave.system.String</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        if(this.isBannedOp == true){
                this.model.ConstraintIncludesADestinationOp = itemCode; //item code to the banned operation
        }else if(this.isBannedOp == false){
            this.model.ConstraintAssignedToAnOriginOp = itemCode; //item code to the origin operation
        }
      ]]></script>
    </method>
  </methodList>
</userInterface>