              </override>
            </overrideList>
          </overlay>
        </overlayList>
      </vform>
    </vformList>
  </UserInterface>
  <viewList>
    <view name="tariffPlanPickListFinderView" type="findVView">
      <outputOverlay>findScript_cm_spoc.SetBoltOnTypePickListFinder/ui_UserInterface/frmui_Forms/exov_Result</outputOverlay>
    </view>
  </viewList>
</findScript>