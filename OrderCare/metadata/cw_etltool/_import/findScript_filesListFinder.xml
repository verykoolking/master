          */
        ]]></script>
      </method>
      <method name="btnClicked_MoveDown" type="uimthd">
        <script>this.changeIndex(false);</script>
      </method>
      <method name="changeIndex" type="uimthd">
        <parameterList>
          <parameter name="isMoveUp" type="rifp">
            <mandatory>true</mandatory>
            <type>dtype_com.conceptwave.system.Boolean</type>
          </parameter>
        </parameterList>
        <script><![CDATA[
          if(this.result.selected.length == 1 && this.model.list.length > 1){

              var selectedIndex, ascendantDoc, selectedDoc, descendantDoc, helper, list;

              selectedIndex = this.result.selected[0].RowIndex;
              selectedDoc = this.result.selected[0];

              if(isMoveUp){
                  if(selectedIndex > 0){

                      ascendantDoc = this.model.list[selectedIndex - 1];
                      selectedDoc.RowIndex = selectedIndex - 1;
                      ascendantDoc.RowIndex = selectedIndex;
                  }
              }else{
                  if(selectedIndex < this.model.list.length-1 ){
                      descendantDoc = this.model.list[selectedIndex + 1];
                      selectedDoc.RowIndex = selectedIndex + 1;
                      descendantDoc.RowIndex = selectedIndex;
                  }
              }

              this.model.sort("RowIndex");

              helper = this.model.getHelper();
              helper["filesList"] = this.model.list;
              this.model.setHelper(helper);

              //this.model.search();
              this.result.updateList;

          }
        ]]></script>
      </method>
      <method name="deleteAction" type="uimthd">
        <script><![CDATA[
          var selectedRows = this.result.selected;
          if(selectedRows && selectedRows.length > 0){

              for(var i=0; i<selectedRows.length; i++){

                  this.result.remove(selectedRows[i]);
              }

              this.result.updateList;
              this.model.sort("RowIndex");
              var list = this.model.list;
              for (var r =0; list && r < list.length; r++){
                  list[r].RowIndex = r;
              }
              this.result.updateList;
              var helper = this.model.getHelper();
              helper["filesList"] = this.model.list;
              this.model.setHelper(helper);
          }
        ]]></script>
      </method>
      <method name="deleteAll" type="uimthd">
        <script><![CDATA[
          while(this.result && this.result.length > 0){
              this.result.remove(this.result[0]);
          }
          var helper = this.model.getHelper();
          helper["filesList"] = this.model.list;
          this.model.setHelper(helper);
        ]]></script>
      </method>
