    <method name="getHelper" type="uimthd">
      <actionCategory>asa</actionCategory>
      <script><![CDATA[
        var helper = this.getScriptObject();
        if(helper == null){
           helper = this.initHelper(helper);
        }
        return helper;
      ]]></script>
    </method>
    <method name="addToList" type="uimthd">
      <parameterList>
        <parameter name="resultDoc" type="rifp">
          <mandatory>true</mandatory>
          <type>doc_cw_etltool._import.filesPath</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        var helper = this.getHelper();
        resultDoc.RowIndex = helper["filesList"].length;
        helper["filesList"].addLast(resultDoc);
        this.setHelper(helper);
      ]]></script>
    </method>
    <method name="setHelper" type="uimthd">
      <actionCategory>asa</actionCategory>
      <parameterList>
        <parameter name="helper" type="rifp">
          <mandatory>true</mandatory>
          <type>nmeta_com.conceptwave.system.Object</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        this.setScriptObject(null);
        this.setScriptObject(helper);
        return helper;
      ]]></script>
    </method>
    <method name="initHelper" type="uimthd">
      <parameterList>
        <parameter name=" helper" type="rifp">
          <mandatory>true</mandatory>
          <type>nmeta_com.conceptwave.system.Object</type>
        </parameter>
      </parameterList>
      <script><![CDATA[
        helper = new Array();
        helper["filesList"] = new DataObjectList();
        return helper;
      ]]></script>
    </method>
  </methodList>
