    <methodList>
      <method name="addFile" type="usrActionMethod">
        <dialogHeight>400</dialogHeight>
        <dialogWidth>615</dialogWidth>
        <showInPopup>true</showInPopup>
        <script><![CDATA[
          if(this.parent.model.FileDirectoryPath == null ||
             this.parent.model.FileDirectoryPath == ""){

                  Global.showUserMessage("Please enter file directory path....");
             }else{

                  var fb = new cw_etltool._import.fileBrowserFinder.UserInterface();
                  fb.model.searchDocument.isFileBrowser = true;
                  fb.model.searchDocument.fileDirectoryPath = this.parent.model.FileDirectoryPath;
                  fb.ownerUI = this;
                  fb.model.search();
                  return fb;

             }
        ]]></script>
      </method>
